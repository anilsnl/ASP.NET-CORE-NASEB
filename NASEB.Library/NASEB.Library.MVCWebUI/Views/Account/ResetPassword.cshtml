@model NASEB.Library.MVCWebUI.Models.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@if (Model.isComplated)
{
    <form class="login100-form validate-form" method="post" action="/Account/ResetPassword" >
        <span class="login100-form-title">
            Size Bir E-Posta Gönderdi!
        </span>

        <div class="text-danger">
            <b> @Model.EMail</b> Adresine paralanızı sıfırlayabilmeniz için bir mail goönerdik!
        </div>


        <div class="container-login100-form-btn">
            <a class="login100-form-btn" href="/Login">
                <b> <span class="fa fa-sign-in"></span>&emsp;Oturum Açın</b>
            
        </div>

      

    </form>
}
else
{
<form class="login100-form validate-form" method="post" action="/Login">
    <span class="login100-form-title">
        NASEB Library Parolanızı Sıfırlayın
    </span>

    <div asp-validation-summary="All"></div>
    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="EMail" placeholder="E-Posta Adresi">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>


    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            <b> <span class="fa fa-lock"></span>&emsp;Devam Et</b>
        </button>
    </div>

    <div class="text-center p-t-12">
        <a class="txt2" href="/Login">
            Oturum Açın
        </a>
    </div>


</form>
}


