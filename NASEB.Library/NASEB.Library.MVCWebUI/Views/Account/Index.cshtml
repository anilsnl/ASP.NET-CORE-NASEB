@model NASEB.Library.MVCWebUI.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title= "Oturum Aç";
}

<form class="login100-form validate-form" method="post" action="/Login">
    <span class="login100-form-title">
        NASEB Library İçin Oturum Açın
    </span>

    <div asp-validation-summary="All"></div>
    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="Username" placeholder="E-Posta Adresi">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Parola Gerekli">
        <input class="input100" type="password" asp-for="Password" placeholder="Parola">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>
    <label class="checkbox">
        <input type="checkbox" asp-for="SaveMe" /> Beni Hatırla
    </label>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            <b> <span class="fa fa-sign-in"></span>&emsp;Oturum Aç</b>
        </button>
    </div>

    <div class="text-center p-t-12">
        <a class="txt2" asp-controller="Account" asp-action="ResetPassword">
            Parolanızı Mı Unuttunuz?
        </a>
    </div>

    <div class="text-center p-t-136">
        <a class="txt2" href="/Account/LoginMember/">
            Üye OLarak Giriş Yapın
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
</form>