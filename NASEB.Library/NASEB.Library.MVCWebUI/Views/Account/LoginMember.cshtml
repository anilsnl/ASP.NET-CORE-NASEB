@model MemberLoginModel
@{
    ViewData["Title"] = "Üye Girişi";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<form class="login100-form validate-form" method="post" action="/Account/LoginMember/">
    @Html.AntiForgeryToken()
    <span class="login100-form-title">
        NASEB Library İçin Üye Girişi Yapın
    </span>

    <div asp-validation-summary="All"></div>
    <div style="background-color:#808080; border-radius:5px,5px;" >
        <select asp-for="Citizenship" class="form-control" style="width99&; border-radius:5px,5px;">
            <option value="1">Türkiye Cumhuriyeti Uyruklu</option>
            <option value="2">Yabancı Uyruklu</option>
        </select>

    </div>
    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="Name" placeholder="Üye adını yazın">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>



    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="Surname" placeholder="Üye soyadı yazın">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="BirthYear" placeholder="Üye doğum yılını yazın" value="">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>
    <div class="wrap-input100 validate-input" data-validate="Geçerli E-Posta Adresi Girin: ex@abc.xyz">
        <input class="input100" type="text" asp-for="TRIDNo" placeholder="Üye TC/YU numarasını yazın" value="">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>
    <label class="checkbox">
        <input type="checkbox" asp-for="SaveMe" /> Beni Hatırla
    </label>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            <b> <span class="fa fa-sign-in"></span>&emsp;Oturum Aç</b>
        </button>
    </div>



    <div class="text-center p-t-136">
        <a class="txt2" href="/Account/">
            Yönetici Girişi Yapın
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
</form>