@model IEnumerable<NASEB.Entities.Concrete.Company>
@{
    ViewData["Title"] = "Kiralama İşlemi Ekle";
}

<form method="post" action="/Rent/Edit">

    <div class="form-group">
        <label for="exampleInputEmail1">Müşteri</label>
        <select class="form-control" id="CustomerID" name="CustomerID">
            <option value="@ViewBag.rent.CustomerID" selected>@ViewBag.rent.CustomerID</option>
            @foreach (var item in ViewBag.customer)
            {
                <option value="@item.CustomerID">@item.Name @item.Surname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Hasar Miktarı</label>
        <input type="text" class="form-control" id="DamagePrice" name="DamagePrice" aria-describedby="DamagePrice" value="@ViewBag.rent.DamagePrice">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Delay Miktari</label>
        <input type="text" class="form-control" id="DelayFine" name="DelayFine" aria-describedby="DelayFine" value="@ViewBag.rent.DelayFine">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kiralanan Şube</label>
        <select class="form-control" id="RentBranchID" name="RentBranchID">
            <option value="@ViewBag.rent.RentBranchID" selected>@ViewBag.rent.RentBranchID</option>
            @foreach (var item in ViewBag.branch)
            {
                <option value="@item.BranchID">@item.BranchName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Alınan Şube</label>
        <select class="form-control" id="BranchID" name="BranchID">
            <option value="@ViewBag.rent.DeliveredBranchID" selected>@ViewBag.rent.DeliveredBranchID</option>
            @foreach (var item in ViewBag.branch)
            {
                <option value="@item.BranchID">@item.BranchName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Araba</label>
        <select class="form-control" id="CarID" name="CarID">
            <option value="@ViewBag.rent.CarID" selected>@ViewBag.rent.CarID</option>
            @foreach (var item in ViewBag.car)
            {
                <option value="@item.CarID">@item.CarName - @item.Plate</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Toplam Kiralama Bedeli</label>
        <input type="text" class="form-control" id="TotalRentPrice" name="TotalRentPrice" aria-describedby="TotalRentPrice" value="@ViewBag.rent.TotalRentPrice">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kalan Kiralama Bedeli</label>
        <input type="text" class="form-control" id="RemainDebt" name="RemainDebt" aria-describedby="RemainDebt" value="@ViewBag.rent.RemaindDebt">

    </div>

    <div hidden class="form-group">
        <label for="exampleInputEmail1">User ID</label>
        <input type="text" class="form-control" id="UserID" name="UserID" aria-describedby="UserID" value="@ViewBag.user">

    </div>
    <div hidden class="form-group">
        <label for="exampleInputEmail1">Rent ID</label>
        <input type="text" class="form-control" id="RentID" name="RentID" aria-describedby="RentID" value="@ViewBag.rent.RentID">

    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

