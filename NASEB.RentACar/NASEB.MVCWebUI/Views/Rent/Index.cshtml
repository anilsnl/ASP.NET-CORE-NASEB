@model IEnumerable<NASEB.Entities.ComplexType.RentCustomerBranchUserView>
@{
    ViewData["Title"] = "Kiralıklar";
}

<table class="table">
    <thead>
        <tr>

            <th scope="col">Müşteri</th>
            <th scope="col">Araba</th>
            <th scope="col">Hasar Bedeli</th>
            <th scope="col">Gecikme Bedeli</th>
            <th scope="col">Şube</th>
            <th scope="col">Toplam Kiralama Bedeli</th>
            <th scope="col">Kalan Kiralama Bedeli</th>
            <th scope="col">Kullanıcı</th>
            <th scope="col">Başlangıç Tarihi</th>
            <th scope="col">Bitiş Tarihi</th>
            <th scope="col">Düzenle</th>
            <th scope="col">Sil</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerName @item.CustomerSurname</td>
                <td>@item.CarName</td>
                <td>@item.DamagePrice</td>
                <td>@item.DelayFine</td>
                <td>@item.BranchName</td>
                <td>@item.TotalRentPrice</td>
                <td>@item.RemainDebt</td>
                <td>@item.UserName @item.UserSurname</td>
                <td>@item.RentStartDate</td>
                <td>@item.RentEndDate</td>
                <td><a href="/Rent/Edit/@item.RentID" class="btn btn-primary">Düzenle</a></td>
                <td><a href="/Rent/Delete/@item.RentID" class="btn btn-danger">Sil</a></td>
              

            </tr>

        }
    </tbody>
</table>
@section scriprt{
    <script>
    $(document).ready(function() {
        $("table").DataTable();
    });
    </script>
}


