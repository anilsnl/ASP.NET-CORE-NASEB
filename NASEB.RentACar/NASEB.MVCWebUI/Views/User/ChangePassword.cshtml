
@{
    ViewData["Title"] = "Şifre Değiştirme";
}

<form method="post" action="/User/ChangePassword">
    <div class="form-group">
        <label for="exampleInputEmail1">Email </label>
        <input type="text" disabled class="form-control" id="Email" name="Email" aria-describedby="Email" value="@User.Identity.Name">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Şuanki Şifrenizi girin</label>
        <input type="password" class="form-control" id="EskiSifre" name="EskiSifre" aria-describedby="EskiSifre" placeholder="Eski Sifre Giriniz...">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Yeni Şifrenizi girin</label>
        <input type="password" class="form-control" id="YeniSifre" name="YeniSifre" aria-describedby="YeniSifre" placeholder="Yeni Sifre Giriniz...">
    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

